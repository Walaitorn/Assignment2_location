<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.a23279.egco428.mylocation.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Username"
        android:id="@+id/user"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="#e1e0e0"
        android:textColor="#43a1f9"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:src="@drawable/egco"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userN"
        android:layout_below="@+id/user"
        android:background="@drawable/border"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Password"
        android:id="@+id/pass"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:background="#e1e0e0"
        android:textColor="#43a1f9"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passW"
        android:inputType="textPassword"
        android:layout_below="@+id/pass"
        android:background="@drawable/border"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_below="@+id/passW"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Sign in"
            android:id="@+id/signin"
            android:layout_below="@+id/passW"
            android:layout_toStartOf="@+id/imageView3"
            android:onClick="clickSignin"
            android:background="#43a1f9"
            android:textColor="#e1e0e0" />

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Cancle"
            android:id="@+id/cancle"
            android:layout_alignBottom="@+id/signin"
            android:layout_alignParentEnd="true"
            android:onClick="clickcancle"
            android:background="#43a1f9"
            android:textColor="#e1e0e0"
            android:layout_marginLeft="50dp" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Sign up"
        android:id="@+id/signup"
        android:onClick="clickSignup"
        android:background="#43a1f9"
        android:textColor="#e1e0e0"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
